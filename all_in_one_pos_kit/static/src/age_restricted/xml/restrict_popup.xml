<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <!--  Template RestrictPopup to add age popup while clicking age restricted product -->
    <t t-name="RestrictPopup" owl="1">
        <Draggable>
            <div class="popup popup-confirm">
                <header class="title drag-handle">
                    <t t-esc="props.title"/>
                </header>
                <main class="body">
                    <t t-esc=" props.body"/>
                </main>
                <footer class="footer">
                    <div class="button confirm disable highlight"
                         t-on-click="confirm">
                        Approve
                    </div>
                    <div class="button cancel" t-on-click="cancel">
                        Reject
                    </div>
                </footer>
            </div>
        </Draggable>
    </t>
</templates>
