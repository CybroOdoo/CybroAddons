<?xml version="1.0" ?>
<odoo>
    <data noupdate="1">
        <!--    Security rules for fleet vehicle --><!--c -->
        <record id="fleet_user_vehicle_visibility_user" model="ir.rule">
            <field name="name">Manager has all rights on vehicle</field>
            <field name="model_id" ref="fleet.model_fleet_vehicle"/>
            <field name="groups"
                   eval="[(4, ref('fleet.fleet_group_manager'))]"/>
        </record>
        <record id="fleet_car_workshop_category" model="ir.module.category">
            <field name="name">Car Workshop</field>
            <field name="description">Car Workshop</field>
            <field name="sequence">20</field>
        </record>
        <record id="fleet_car_workshop_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>
            <field name="category_id" ref="fleet_car_workshop_category"/>

        </record>
        <record id="fleet_car_workshop_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids"
                   eval="[(6, 0, [ref('fleet_car_workshop.fleet_car_workshop_user')])]"/>
            <field name="category_id" ref="fleet_car_workshop_category"/>

        </record>
    </data>
</odoo>
