<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_daycare_activities" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">daycare.activities</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="activity_type_view_tree" model="ir.ui.view">
        <field name="name">daycare.activities.view.tree</field>
        <field name="model">daycare.activities</field>
        <field name="arch" type="xml">
            <tree create='0'>
                <field name="activity_id"/>
                <field name="product_id"/>
                <field name="notes"/>
                <field name="time_in"/>
                <field name="time_out"/>
                <field name="responsible"/>
            </tree>
        </field>
    </record>
</odoo>