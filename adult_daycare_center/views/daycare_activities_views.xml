<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    Action Daycare Activities-->
    <record id="daycare_activities_action" model="ir.actions.act_window">
        <field name="name">Activities</field>
        <field name="res_model">daycare.activities</field>
        <field name="view_mode">tree</field>
    </record>
    <!--    Daycare Activities tree view-->
    <record id="daycare_activities_view_tree" model="ir.ui.view">
        <field name="name">daycare.activities.view.tree</field>
        <field name="model">daycare.activities</field>
        <field name="arch" type="xml">
            <tree create='0'>
                <field name="activity_type_id"/>
                <field name="product_id"/>
                <field name="notes"/>
                <field name="time_in"/>
                <field name="time_out"/>
                <field name="responsible_id"/>
            </tree>
        </field>
    </record>
</odoo>
