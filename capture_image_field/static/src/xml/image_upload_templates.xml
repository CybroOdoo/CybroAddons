<?xml version="1.0" encoding="UTF-8"?>
<!--Inherited web.ImageField for adding a button  -->
<templates id="template" xml:space="preserve">
    <t t-name="capture_image_field.cameraField" t-inherit="web.FieldBinaryImage"
       t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_clear_file_button')]"
               position="after">
            <button class="fa fa-camera-retro float-right fa-lg _image_capture_button"
                    title="Camera" aria-label="Camera"/>
        </xpath>
    </t>
</templates>
