<?xml version="1.0" encoding="UTF-8"?>
<!--Purchase Dashboard view-->
<templates id="template" xml:space="preserve">
    <t t-name="PurchaseTiles" owl="1">
                <!-- This is the Purchase Tiles template -->
        <div class="col-md-3 col-sm-5 purchase_order_all oh-data">
           <div class="oh-card" style="width: 288px;">
               <div class="oh-card-body">
                   <div class="stat-widget-one">
                       <div class="stat-icon"
                            t-attf-style="background:{{props.color}}">
                           <i t-att-class="props.icon"/>
                       </div>
                       <div class="stat-content">
                           <div class="stat-head" t-out="props.name"/>
                           <div class="stat_count">
                               <span t-att-class="purchase_order" t-out="props.value"/>
                           </div>
                       </div>
                   </div>
               </div>
           </div>
       </div>
    </t>
</templates>
