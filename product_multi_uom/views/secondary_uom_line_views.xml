<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    view for the secondary_uom_line-->
    <record id="secondary_uom_line_view_form" model="ir.ui.view">
        <field name="name">secondary.uom.line.view.form</field>
        <field name="model">secondary.uom.line</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="product_id"/>
                </group>
                <group>
                    <field name="secondary_uom_id" style="width: 200px"/>
                    <field name="secondary_uom_ratio" force_save="1" style="width: 200px"/>
                    <field name="example_ratio" force_save="1"/>
                </group>
            </form>
        </field>
    </record>
</odoo>
