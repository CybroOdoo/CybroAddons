<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_stock_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.low_stocks_product_alert
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_attributes']" position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="low_stock_setting">
                    <div class="o_setting_left_pane">
                        <field name="is_low_stock_alert"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Low Stock Alert</span>
                        <div class="text-muted">Quantity for Low Stock
                            Alert
                        </div>
                        <div class="row mt16"
                             attrs="{'invisible': [('is_low_stock_alert', '=', False)]}">
                            <label for="min_low_stock_alert"
                                   class="col-lg-4 o_light_label"/>
                            <field name="min_low_stock_alert"
                                   class="oe_inline"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>