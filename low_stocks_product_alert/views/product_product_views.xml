<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <odoo>
        <template id="assets_backend" name="alert_assets"
                  inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript"
                        src="/low_stocks_product_alert/static/src/js/alert_color_js.js"/>
            </xpath>
        </template>
        <template id="pos_assets" inherit_id="point_of_sale.assets">
            <xpath expr="." position="inside">
                <script type="text/javascript"
                        src="/low_stocks_product_alert/static/src/js/alert_tag_js.js"/>
            </xpath>
        </template>

    </odoo>

    <record id="product_product_view_form" model="ir.ui.view">
        <field name="name">
            product.product.view.form.inherit.low_stocks_product_alert
        </field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <field name="pos_categ_id" position="after">
                <field name="alert_tag"/>
            </field>
        </field>
    </record>

</odoo>