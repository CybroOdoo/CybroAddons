<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <!--  Template for the systray bar for display the language selections  -->
    <t t-name="LanguageSystray" id="easy_language">
        <div class="new_icon">
            <div class="o-dropdown dropdown">
                <div id="language_select_div" class="toggle-icon"
                     role="button">
                    <select id="language_selector"
                            t-ref="language_selector"
                            style="color:#000;background-color: transparent;border-color:transparent"
                            t-on-change="onChangeLang">
                        <option class="language_options" value="0">Select Language</option>
                    </select>
                </div>
            </div>
        </div>
    </t>
</templates>
