<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--     Loging page template-->
    <template id="inherit_login_page" inherit_id="web.login">
        <xpath expr="//form[hasclass('oe_login_form')]" position="replace">
            <section class="login loging_enter">
                <div class="container d-flex justify-center   h-full">
                    <div class="wrapper">
                        <div class="row">
                            <div class="col-12">
                                <div class="login_form loging_template">
                                    <h3>Login with Rader</h3>
                                    <form class="oe_login_form" role="form"
                                          t-attf-action="/web/login"
                                          method="post"
                                          onsubmit="this.action = '/web/login' + location.hash">
                                        <input type="hidden" name="csrf_token"
                                               t-att-value="request.csrf_token()"/>
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="form-group"
                                                     t-if="databases and len(databases) &gt; 1">
                                                    <label for="db"
                                                           class="col-form-label">
                                                        Database
                                                    </label>
                                                    <div t-attf-class="input-group {{'input-group-sm' if form_small else ''}}">
                                                        <input type="text"
                                                               name="db"
                                                               t-att-value="request.db"
                                                               id="db"
                                                               t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                                               required="required"
                                                               readonly="readonly"/>
                                                        <a role="button"
                                                           href="/web/database/selector"
                                                           class="btn btn-secondary">
                                                            Select
                                                            <i class="fa fa-database"
                                                               role="img"
                                                               aria-label="Database"
                                                               title="Database"/>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <input type="text"
                                                           placeholder="Enter your email"
                                                           name="login"
                                                           t-att-value="login"
                                                           id="usr21"
                                                           t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                                           required="required"
                                                           autofocus="autofocus"
                                                           autocapitalize="off"/>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <input type="password"
                                                           placeholder="Enter your Password"
                                                           name="password"
                                                           id="usr23"
                                                           t-attf-class="form-control #{'form-control-sm' if form_small else ''}"
                                                           required="required"
                                                           autocomplete="current-password"
                                                           t-att-autofocus="'autofocus' if login else None"
                                                           maxlength="4096"/>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <p class="alert alert-danger"
                                                       t-if="error"
                                                       role="alert">
                                                        <t t-esc="error"/>
                                                    </p>
                                                    <p class="alert alert-success"
                                                       t-if="message"
                                                       role="status">
                                                        <t t-esc="message"/>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="check">
                                                    <div class="form-check">
                                                        <input class="form-check-input"
                                                               type="checkbox"
                                                               value=""
                                                               id="flexCheckDefault"/>
                                                        <label class="form-check-label"
                                                               for="flexCheckDefault">
                                                            Remember Me
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div t-attf-class="clearfix oe_login_buttons col-6">
                                                <button type="submit"
                                                        class="btn btn-black ml-3"
                                                        style="width: fit-content;">
                                                    Log in
                                                </button>
                                                <div class="o_login_auth"/>
                                            </div>
                                            <div class="justify-content-between mt-2 d-flex small">
                                                    <a t-if="signup_enabled" t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a>
                                                    <a t-if="reset_password_enabled" t-attf-href="/web/reset_password?{{ keep_query() }}">Reset Password</a>
                                            </div>
                                            <div class="col-12" style="left: 85px; padding-top: 10px;">
                                                <t t-if="debug">
                                                    <button type="submit"
                                                            name="redirect"
                                                            value="/web/become"
                                                            class="btn btn-link btn-sm" style="color:white !important;">
                                                        Log in as superuser
                                                    </button>
                                                </t>
                                            </div>
                                            <input type="hidden" name="redirect"
                                                   t-att-value="redirect"/>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>
</odoo>
