<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherited res_config_settings to add new fields -->
        <record id="res_config_settings_view_form_point_of_sale"
                model="ir.ui.view">
            <field name="name">
                res.config.settings.view.form.inherit.purchase.serial.number
            </field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='point_of_sale']" position="inside">
                    <h2>Delete Paid Order</h2>
                    <div class="row mt16 o_settings_container"
                         name="point_of_sale_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_delete"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_delete"/>
                                <div class="text-muted">Delete Post/Paid Order
                                </div>
                            </div>
                        </div>
                        <div style="padding-left: 62px;"
                             attrs="{'invisible':[('is_delete','!=',True)]}">
                            <div class="o_setting_left_pane "
                                 style="width:1313px !important;">
                                <field name="delete_paid_order"
                                       class="o_light_label" widget="radio"
                                       attrs="{'required': [('is_delete','=', True)]}"/>
                            </div>
                        </div>
                        <div style="margin-left:33px !important;">
                            <div class="col-12 col-lg-6 o_setting_box"
                                 id="profiling_enabled_until1"
                                 style="padding-left: 48px;"
                                 attrs="{'invisible': ['|',('delete_paid_order', '!=', 'order_with_code'),
                                 ('is_delete','!=',True)]}">
                                <label for="code"
                                       style="margin-right: 10px margin-left:58px; !important;"/>
                                <field name="code"
                                       attrs="{'required': [('delete_paid_order', '=', 'order_with_code')],}"/>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
