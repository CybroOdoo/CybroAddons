<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!--inherit dalle_image_suggestion form view for adding
    Make as Media Image button-->
    <record id="dalle_image_suggestion_form_view" model="ir.ui.view">
        <field name="name">
            dalle.image.suggestion.inherit.openai.website.product.media
        </field>
        <field name="model">dalle.image.suggestion</field>
        <field name="inherit_id"
               ref="openai_product_images.dalle_image_suggestion_form_view"/>
        <field name="arch" type="xml">
            <header>
                <button name="action_make_as_media_image" type="object"
                        string="Make as Media Image"/>
            </header>
        </field>
    </record>
</odoo>
