<?xml version="1.0" encoding="UTF-8"?>
<!--To show popup when clicking on feedback control button-->
<templates id="Success_template" xml:space="preserve">
        <t t-name="pos_return_barcode.SuccessPopup" owl="1">
            <div class="popup popup-confirm">
                <div class="modal-header">
                    <h4 class="modal-title">
                        <t t-esc="props.title"/>
                    </h4>
                </div>
                <div class="modal-body">
                    <span style="font-size: 15px;">
                        <t t-esc="props.body"/>
                    </span>
                </div>
                <div class="footer footer-flex modal-footer">
                    <div class="button confirm highlight btn btn-lg btn-primary"
                         t-on-click="confirm">
                        <t t-esc="props.confirmText"/>
                    </div>
                </div>
            </div>
        </t>
</templates>
