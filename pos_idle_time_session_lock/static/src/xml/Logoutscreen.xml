<?xml version="1.0" encoding="UTF-8"?>
<!-- This XML template is used to extend the 'point_of_sale.Logoutscreen' class for
 the 'Chrome' template to show logout screen. -->
<templates id="template" xml:space="preserve">
    <t t-name="LogoutScreen" owl="1">
        <div class="login-overlay">
            <div class="screen-login">
                <div class="login-title"><small>Log in to </small>
                    <t t-esc="shopName" />
                </div>
                <div class="login-body">
                    <i class="fa fa-sign-in" style="font-size:56px" t-on-click="showLogoutScreen"/>
                </div>
            </div>
        </div>
    </t>
</templates>
