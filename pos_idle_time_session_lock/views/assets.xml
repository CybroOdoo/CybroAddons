    <template id="assets" inherit_id="point_of_sale.assets">
        <xpath expr="." position="inside">
            <script type="text/javascript"
                    src="/pos_idle_time_session_lock/static/src/js/session_timer.js"/>
        </xpath>
    </template>
</odoo>
