<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  Form view of the wizard model inventory_out_of_stock_report-->
    <record id="inventory_over_stock_report_view_form" model="ir.ui.view">
        <field name="name">inventory.over.stock.report.view.form</field>
        <field name="model">inventory.over.stock.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Date Range">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <group expand="0" string="Select Days Of Over Stock">
                            <field name="inventory_for_next_x_days"/>
                        </group>
                    </group>
                    <group>
                        <group string="Filters">
                            <field name="product_ids"
                                   widget="many2many_tags"/>
                            <field name="category_ids"
                                   widget="many2many_tags"/>
                        </group>
                        <group string="Domains">
                            <field name="company_ids"
                                   widget="many2many_tags"/>
                            <field name="warehouse_ids"
                                   widget="many2many_tags"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_pdf"
                                string="PDF"
                                type="object"
                                data-hotkey="q"
                                class="btn-primary"/>
                        <button name="action_excel"
                                string="EXCEL"
                                type="object"
                                data-hotkey="r"
                                class="btn-primary"/>
                        <button name="display_report_views"
                                string="View Report Data" type="object"
                                class="oe_highlight"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <!--  Action for the view-->
    <record id="inventory_over_stock_report_action"
            model="ir.actions.act_window">
        <field name="name">Inventory Over Stock Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">inventory.over.stock.report</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="inventory_over_stock_report_view_form"/>
        <field name="target">new</field>
    </record>
<!--    Menu item for the action-->
    <menuitem id="inventory_over_stock_report_menu"
              name="Inventory Over Stock Report"
              action="inventory_over_stock_report_action"
              parent="stock.menu_warehouse_report"
              sequence="11"/>
</odoo>
