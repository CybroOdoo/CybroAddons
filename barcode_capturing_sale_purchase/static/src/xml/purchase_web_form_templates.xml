<?xml version="1.0" encoding="UTF-8"?>
<templates>
   <t t-name="barcode_capturing_sale_purchase.purchase_scanner" t-inherit="web.FormView">
       <xpath expr="//t[@t-set-slot='layout-actions']" position="inside">
          <button class="btn btn-primary d-flex align-items-center" t-on-click="PurchaseBarcodeDialog">
                <i class="fa fa-barcode" style="font-size:24px; margin-right: 8px; color: white;"> </i>
                <span>Scan Barcode</span>
          </button>
       </xpath>
   </t>
</templates>
