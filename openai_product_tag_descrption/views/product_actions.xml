<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--'Generate Tags from Description Using Openai' in action dropdown-->
        <record id="action_product_template_tag_description"
                model="ir.actions.server">
            <field name="name">Generate Tags from Description Using Openai
            </field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="binding_model_id"
                   ref="product.model_product_template"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                action = model.action_create_tag_description()
            </field>
        </record>

