<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="Baner" inherit_id="website.snippets" name=" Banner">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_blast.banners"
               t-thumbnail="/theme_blast/static/src/img/snippets/banner_section-1.png"/>
        </xpath>
    </template>
    <template id="banners" name="Banner snippet">
        <section class="banner"  id="home">
           <video autoplay="autoplay" id="bgvid" loop="loop" poster="post_image_path.jpg" title="Title">
               <source src="/theme_blast/static/src/img/banner/DJ_Blurred_2.mov" type="video/mp4">
               </source>
           </video>
            <div class=" container">
                <div class="banner_content">
                    <div class="row">
                        <div class="col-lg-7 col-md-10 col-sm-12">
                            <div class="banner_left">
                                <div class="card">
                                    <div class="card-body">
                                        <h5 class="card-title">Enjoy the Quality of Real sound with Blast</h5>
                                        <p class="card-text">Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula
                                        eget dolor. Aenean massa. Cum sociis
                                        natoque penatibus et magnis dis parturient montes.</p>
                                        <a href="#" class="btn btn-primary">Buy now</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="banner_right">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>