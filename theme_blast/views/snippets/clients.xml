<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
        <template id="testimonial" name="Testimonial Snippet">
          <section class="testiomnial gap" id="testiomnial">
          </section>
      </template>

      <template id="testimonials_snippet">
            <div class="container" t-ignore="True">
              <div class="section_heading">
                <h3>Our Clients Say</h3>
                <hr/>
                <p>A wonderful serenity has taken possession of my entire soul, like these<br/> sweet mornings of spring which I
                  enjoy with </p>
              </div>
              <div class="testimonial_contents">
                <div class="owl-carousel" id="testi">
                    <t t-if="partners">
                        <t t-foreach="partners" t-as="partner">
                      <div>
                      <div class="row">
                        <div class="col-2 d-none d-lg-block">
                          <div class="row">
                            <div class="col-12">
                              <div class="side_img1">
                                <img src="/theme_blast/static/src/img/cybrosys/1.jpg" alt=""/>
                              </div>
                            </div>
                            <div class="col-12">
                              <div class="side_img2">
                                <img src="/theme_blast/static/src/img/cybrosys/2.jpg" alt=""/>
                              </div>
                            </div>
                            <div class="col-12">
                              <div class="side_img3">
                                <img src="/theme_blast/static/src/img/cybrosys/3.jpg" alt=""/>
                              </div>
                            </div>
                          </div>
                        </div>
                        <div class="col-lg-8 col-12">
                          <div class="card text-center">
                            <div class="card-body">
                              <div class="card-img">
                                <span t-if="partner" t-esc="partner.image_1920"
                                      t-options="{'widget': 'image', 'preview_image': 'image_1024'}"
                                      class="first-image"/>
                              </div>
                              <p class="card-text">
                                <span t-if="partner" t-esc="partner.message"/>
                              </p>
                              <h4 class="name">
                                <span t-if="partner" t-esc="partner.name"/>
                              </h4>
                              <p class="card-text"><small class="text-muted">
                                <span t-if="partner" t-esc="partner.function"/><br/>
                                <span t-if="partner" t-esc="partner.parent_id.name"/>
                              </small></p>
                            </div>
                          </div>
                        </div>
                        <div class="col-2 d-none d-lg-block">
                          <div class="right">
                            <div class="row">
                              <div class="col-12">
                                <div class="side_img1">
                                  <img src="/theme_blast/static/src/img/cybrosys/4.jpg" alt=""/>
                                </div>
                              </div>
                              <div class="col-12">
                                <div class="side_img2 ml-auto">
                                  <img src="/theme_blast/static/src/img/cybrosys/5.jpg" alt=""/>
                                </div>
                              </div>
                              <div class="col-12">
                                <div class="side_img3">
                                  <img src="/theme_blast/static/src/img/cybrosys/1.jpg" alt=""/>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                      </div>
                    </t>

                    </t>
                   <div class="slider-counter">
                   </div>
                   <t t-if="not partners">
                       <div>
                           Please add client message in Blast Configuration
                       </div>
                   </t>
                </div>
              </div>
            </div>
  </template>
      <template id="testimonial_snippet" inherit_id="website.snippets"
            name="Testimonial">
        <xpath expr="//div[@id='snippet_structure']" position="inside">
            <div class="o_panel_body">
                <t t-snippet="theme_blast.testimonial"
                   t-thumbnail="/theme_blast/static/src/img/snippets/testinomial-1.png"/>
            </div>
        </xpath>
    </template>

</odoo>