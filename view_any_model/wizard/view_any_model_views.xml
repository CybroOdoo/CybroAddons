<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_any_model_view_form" model="ir.ui.view">
        <field name="name">view.any.model.view.form</field>
        <field name="model">view.any.model</field>
        <field name="arch" type="xml">
            <form string="View Any Model" create="false" edit="false" delete="false" duplicate="false">
                <group>
                    <group>
                        <field name="view_type" />
                        <field name="record_id" attrs="{'invisible': [('view_type', '!=', 'form')], 'required': [('view_type', '=', 'form')]}" />
                        <field name="model_id" required="1" options="{'no_create': True}"/>
                        <field name="model_name" invisible="1"/>
                        <field name="filter_domain"  widget="domain" options="{'model': 'model_name', 'in_dialog': True}" attrs="{'invisible': [('view_type', '=', 'form')]}" />
                    </group>
                    <group />
                    <footer>
                        <button string="View" name="action_view_model" type="object" class="btn-primary" />
                        <button string="Discard" class="btn-default" special="cancel" />
                    </footer>
                </group>
            </form>
        </field>
    </record>

    <record id="view_any_model_action" model="ir.actions.act_window">
        <field name="name">View Any Model</field>
        <field name="res_model">view.any.model</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_any_model_view_form" />
        <field name="target">new</field>
    </record>

    <menuitem name="View Any Model" id="view_any_model_menu_action" action="view_any_model_action"
              parent="base.next_id_9" groups="view_any_model.view_any_model_group_user" sequence="5" />

</odoo>