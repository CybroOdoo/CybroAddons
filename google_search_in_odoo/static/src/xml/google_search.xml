<?xml version="1.0" encoding="UTF-8" ?>
<templates>
    <!--    Template Google Search Output-->
    <t t-name="SearchSystray">
        <div class="toggle-icon" role="button" style="margin-right:100px">
            <Dropdown class="toggle-icon" menuClass="`p-3 pb-3`"
                      position="'bottom-end'">
                <t t-set-slot="toggler">
                    <div class="input-group col-sm-15  input-group-lg"
                         id="google_search" style="height:2px">
                        <div class="input-group-prepend">
                            <span class="input-group-text google">
                                <img src="https://img.icons8.com/color/48/000000/google-logo.png"
                                     style="height:12px;"/>
                            </span>
                        </div>
                        <input type="text" id="search_text" class="form-control"
                               style="height:26px;"/>
                        <div class="input-group-append">
                            <span class="input-group-text search">
                                <img src="https://img.icons8.com/nolan/48/000000/search.png"
                                     style="height:12px;" id="search_icon"/>
                            </span>
                        </div>
                    </div>
                </t>
                <DropdownItem>
                    <div class="google_result" style="display: none"/>
                </DropdownItem>
            </Dropdown>
        </div>
    </t>
</templates>
