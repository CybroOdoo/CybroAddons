<?xml version="1.0" encoding="utf-8" ?>
<!--TO ADD PICTURES IN PRODUCT TEMPLATE FORM-->
<odoo>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.view.form.inherit.product.360.degree.view.in.website</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_ok']" position="before">
                <field name="is_boolean"/>
                <label for="is_boolean" string="Display 360° Image"/>
            </xpath>
            <xpath expr="//page[@name='invoicing']" position="after">
                <page name="360_view"
                      string="360° View"
                      attrs="{'invisible': [('is_boolean','=',False)]}">
                    <field name="image_view_ids">
                        <tree editable="bottom">
                            <field name="name"/>
                            <field name="image_130" widget="image" class="oe_avatar"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
