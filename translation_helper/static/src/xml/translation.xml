<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Extend the TranslationDialog -->
    <t t-name="translation" t-inherit="web.TranslationDialog" t-inherit-mode="extension" owl="1">
         <xpath expr="//button[text()='Save']" position="replace">
            <button class="btn btn-secondary" t-on-click="translate">Translate</button>
        </xpath>
    </t>
</templates>
