<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    This module was inherited for adding a field mail template and followup days-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.quotation.customer.followup
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sale_config_online_confirmation_sign']"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="quotation_followup_mail">
                    <div class="o_setting_left_pane">
                        <field name="quotation_followup_mail"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="quotation_followup_mail"
                               string="Quotation Followup By Email"/>
                        <div class="text-muted mb16">
                            Set followup mail to customer after quotation sent.
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <span attrs="{'invisible': [('quotation_followup_mail','=',False)]}">
                            Mail Template
                        </span>
                        <field name="mail_template_id"
                               attrs="{'invisible': [('quotation_followup_mail','=',False)]}"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span attrs="{'invisible': [('quotation_followup_mail','=',False)]}">
                            Mail send after
                        </span>
                        <field name="days"
                               attrs="{'invisible': [('quotation_followup_mail','=',False)]}"/>
                        <span attrs="{'invisible': [('quotation_followup_mail','=',False)]}">
                            day(s)
                        </span>
                    </div>
                </div>
            </xpath>
            <xpath expr="//div[@id='sale_config_online_confirmation_sign']"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box"
                     id="quotation_expiry_mail">
                    <div class="o_setting_left_pane">
                        <field name="quotation_expiry_mail"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="quotation_expiry_mail"
                               string="Quotation expiry Email"/>
                        <div class="text-muted mb16">
                            Set Expiry Mail to customer.
                        </div>
                    </div>
                    <div class="o_setting_right_pane">
                        <span attrs="{'invisible': [('quotation_expiry_mail','=',False)]}">
                            Mail Template
                        </span>
                        <field name="expiry_mail_id"
                               attrs="{'invisible': [('quotation_expiry_mail','=',False)]}"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span attrs="{'invisible': [('quotation_expiry_mail','=',False)]}">
                            Quotation expired after
                        </span>
                        <field name="expiry_days"
                               attrs="{'invisible': [('quotation_expiry_mail','=',False)]}"/>
                        <span attrs="{'invisible': [('quotation_expiry_mail','=',False)]}">
                            Day(s)
                        </span>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
