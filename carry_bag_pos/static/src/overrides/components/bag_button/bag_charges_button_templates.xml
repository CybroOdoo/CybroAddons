<?xml version="1.0" encoding="UTF-8"?>
<!--Template for creating button in pos session-->
<templates id="template" xml:space="preserve">
  <t t-name="carry_bag_pos.BagChargesButton" owl="1">
      <button t-if="pos.config.bag_charges and pos.config.bag_category_id"
              class="control-button btn btn-light rounded-0 fw-bolder"
              t-on-click="() => this.onClick()">
			<i class="fa fa-shopping-bag" aria-label="Shopping Bag"
               title="Shopping Bag"/>
          <span> </span>
          <span>Add Bag</span>
		</button>
      </t>
</templates>
