<odoo>
    <template id="fasion_banner" inherit_id="website.snippets" name="Banner">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_fasion.s_fasion_banner"
               t-thumbnail="/theme_fasion/static/src/images/snippets/index-banner-block.jpg"/>
        </xpath>
    </template>

