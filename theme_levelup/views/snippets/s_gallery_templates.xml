<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--                    gallery snippet-->
    <template id="gallery" name="Gallery">
        <section class="gallery p_top">
            <div class="wrapper">
                <div class="container">
                    <div class="bg_heading">
                        <h1 class="gallery_head">
                            Product
                            photography
                        </h1>
                    </div>
                    <div class="img_group">
                        <div class="row pb-5">
                            <div class="col-lg-6 col-md-6 col-12  ">
                                <div class="card pr-0 pr-lg-5 pr-md-5">
                                    <a class="card_img" href="#">
                                        <img src="/theme_levelup/static/src/images/gallery/g1 (1).png"
                                             alt=""/>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12 custom_margin">
                                <div class="card">
                                    <a class="card_img  ml-lg-3 ml-md-3"
                                       href="#">
                                        <img src="/theme_levelup/static/src/images/gallery/g1 (2).png"
                                             alt=""/>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row  custom_margin_m">
                            <div class="col-lg-6 col-md-6 col-12 ">
                                <div class="card mr-0 mr-lg-3 mr-md-3">
                                    <a href="#" class="card_img">
                                        <img src="/theme_levelup/static/src/images/gallery/g1 (3).png"
                                             alt=""/>
                                    </a>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12 custom_margin">
                                <div class="card  ml-lg-3 ml-md-3">
                                    <a class="card_img" href="#">
                                        <img src="/theme_levelup/static/src/images/gallery/g1 (4).png"
                                             alt=""/>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="bottom_link">
                            <div class="row">
                                <div class="col-7">
                                    <p class="">
                                        Hungry for more examples?
                                    </p>
                                </div>
                                <div class="col-5">
                                    <div class="left_link">
                                        <a href="#">
                                            All projects
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="levelup_counter_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <div data-js="CounterSnippet" data-selector=".counter_main">
                <we-input string="WORKING HOURS" data-step="1" value="150000"
                          data-select-data-attribute=""
                          data-attribute-name="defaultCounter"/>
                <we-input string="PHOTO CAPTURE" data-step="1" value="150000"
                          data-select-data-attribute=""
                          data-attribute-name="defaultCounter2"/>
                <we-input string="WORK COMPLETED" data-step="1" value="150000"
                          data-select-data-attribute=""
                          data-attribute-name="defaultCounter3"/>
                <we-input string="TELEPHONIC TALK" data-step="1" value="150000"
                          data-select-data-attribute=""
                          data-attribute-name="defaultCounter4"/>
            </div>
        </xpath>
    </template>
</odoo>

