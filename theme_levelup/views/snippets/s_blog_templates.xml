    <template id="latest_blog" name="Blog">
        <section class="awards s_carousel_wrapper p_top p_bottom" data-vxml="001">
            <div class="wrapper">
                <div class="container">
                    <div class="row p_top">
                        <div class="col-lg-3 col-md-3 col-12">
                            <h5 class="u_sub_heading_dark">
