<?xml version="1.0" encoding="UTF-8" ?>
<!--    Template for dashboard-->
<templates id="template" xml:space="preserve">
    <t t-name="DashboardDashboard">
        <div class="oh_dashboards" style="overflow-y: scroll;height: 100vh;">
            <section class="dashboard_main_section" id="main_section_manager">
                <div class="crm_dash_cards row">
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow">
                            <div class="dashboard-card__details">
                                <table>
                                    <tr>
                                        <td><b>Start Date</b></td>
                                        <td><input type="date"
                                                   t-on-change="DateChanged"
                                                   t-model="state.date.start_date"
                                                   style="font-family: 'Roboto Mono',monospace;font-size: 16px;outline: auto;"
                                                   name="start_date"/></td>
                                    </tr>
                                    <tr>
                                        <td><b>End Date</b></td>
                                        <td><input type="date"
                                                   t-on-change="DateChanged"
                                                   t-model="state.date.end_date"
                                                   style="font-family: 'Roboto Mono',monospace;font-size: 16px;outline: auto;"
                                                   name="end_date"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow quotation"
                             t-on-click="on_dashboard_quotation_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                                <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations.png"
                                     style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                    <span><t t-esc="state.data.quotation"/></span>
                                </h3>
                                <h4>Quotations</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow my_sale_order"
                             t-on-click="on_dashboard_my_sale_order_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                                <img t-attf-src="./all_in_one_sales_kit/static/src/img/sales-orders.png"
                                     style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                   <span><t t-esc="state.data.my_sale_order_templates"/></span>
                                </h3>
                                <h4>Sale Orders</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow quotation_sent"
                             t-on-click="on_dashboard_quotation_sent_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                                <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations-send.png"
                                     style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                    <span>
                                        <t t-esc="state.data.quotation_sent"/>
                                    </span>
                                </h3>
                                <h4>Quotation Sent</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow quotation_cancel"
                             t-on-click="on_dashboard_quotation_cancel_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                                <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations-cancel.png"
                                     style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                    <span>
                                        <t t-esc="state.data.quotation_cancel"/>
                                    </span>
                                </h3>
                                <h4>Quotation Cancel</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow customers"
                             t-on-click="on_dashboard_customers_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                               <img t-attf-src="./all_in_one_sales_kit/static/src/img/custmers.png"
                                    style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                    <span>
                                        <t t-esc="state.data.customers"/>
                                    </span>
                                </h3>
                                <h4>Customers</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow products"
                             t-on-click="on_dashboard_products_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                                <img t-attf-src="./all_in_one_sales_kit/static/src/img/Products.png"
                                     style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                    <span>
                                        <t t-esc="state.data.products"/>
                                    </span>
                                </h3>
                                <h4>Products</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-12 col-md-3">
                        <div class="dashboard-card card-shadow to_invoice"
                             t-on-click="on_dashboard_to_invoice_action">
                            <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                                <img t-attf-src="./all_in_one_sales_kit/static/src/img/to-invoice.png"
                                     style=" height: 70px;"/>
                            </div>
                            <div class="dashboard-card__details">
                                <h3>
                                    <span>
                                        <t t-esc="state.data.to_invoice"/>
                                    </span>
                                </h3>
                                <h4>To Invoice</h4>
                            </div>
                        </div>
                    </div>
                    <div style="display:flex;">
                        <div class="col-md-6 card" style="margin:10px;">
                            <!--card-body-->
                            <center>
                                <h3>Top Customers</h3>
                                <div style="height:400px; width:400px">
                                    <canvas t-ref="LeadCustomer"/>
                                </div>
                            </center>
                        </div>
                        <div class="col-md-6 card" style="margin:10px;">
                            <!--card-body-->
                            <center>
                                <h3>Top Products</h3>
                                <div style="height:400px; width:400px">
                                    <canvas t-ref="LeadProducts"/>
                                </div>
                            </center>
                        </div>
                    </div>
                    <div style="display:flex;">
                        <div class="col-md-6 card" style="margin:10px;">
                            <!--card-body-->
                            <center>
                                <h3>Top Sale Orders</h3>
                                <div>
                                    <canvas t-ref="LeadSaleOrders"/>
                                </div>
                            </center>
                        </div>
                        <div class="col-md-6 card"
                             style="margin:10px;padding-bottom:50px;">
                            <!--card-body-->
                            <center>
                                <h3>Sales Team Revenue</h3>
                                <div style="height:400px; width:400px">
                                    <canvas t-ref="SalesTeamRevenue"/>
                                </div>
                            </center>
                        </div>
                    </div>
                    <div style="display:flex;">
                        <div class="col-md-6 card" style="margin:10px;">
                            <!--card-body-->
                            <center>
                                <h3>Least Sold Products</h3>
                                <div>
                                    <canvas t-ref="LeastSoldProduct"/>
                                </div>
                            </center>
                        </div>
                        <div class="col-md-6 card"
                             style="margin:10px;padding-bottom:50px;">
                            <!--card-body-->
                            <center>
                                <h3>My Monthly Quotation Count</h3>
                                <div>
                                    <canvas t-ref="MonthlyQuotation"/>
                                </div>
                            </center>
                        </div>
                    </div>
                </div>
            </section>

        </div>
    </t>
    <t t-name="LoginUser">
     <section class="dashboard_main_section" id="main_section_login">
        <div class="row">
            <div class="col-sm-12 mb-4">
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-4">
                        <form class="form-group">
                            <span>Start Date:</span>
                            <input type="date" id="start_date"
                                   name="start_date"/>
                            <span>End Date:</span>
                            <input type="date" id="end_date" name="end_date"/>
                        </form>
                    </div>
                </div>
                <hr/>
            </div>
        </div>
     </section>
    </t>
    <t t-name="MainSection">
        <section class="dashboard_main_section" id="main_section_manager">
            <div class="crm_dash_cards row">
            <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow quotation">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations.png"
                                 style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                        <h3>
                        <span>
                            <div id="quotation_templates"/>
                        </span>
                    </h3>
                            <h4>Quotations</h4>
                    </div>
                </div>
                </div>
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow my_sale_order">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <img t-attf-src="./all_in_one_sales_kit/static/src/img/sales-orders.png"
                                 style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                               <span>
                                   <div id="my_sale_order_templates"/>
                               </span>
                            </h3>
                            <h4>Sale Orders</h4>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow quotation_sent">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations-send.png"
                                 style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="quotation_sent"/>
                                </span>
                            </h3>
                            <h4>Quotation Sent</h4>
                        </div>
                    </div>
                </div>
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow quotation_cancel">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <img t-attf-src="./all_in_one_sales_kit/static/src/img/Quotations-cancel.png"
                                 style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="quotation_cancel"/>
                                </span>
                            </h3>
                            <h4>Quotation Cancel</h4>
                        </div>
                </div>
            </div>
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow customers">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                           <img t-attf-src="./all_in_one_sales_kit/static/src/img/custmers.png"
                                style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="customers"/>
                                </span>
                            </h3>
                            <h4>Customers</h4>
                        </div>
                </div>
            </div>
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow products">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <img t-attf-src="./all_in_one_sales_kit/static/src/img/Products.png"
                                 style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="products"/>
                                </span>
                            </h3>
                            <h4>Products</h4>
                        </div>
                </div>
            </div>
                <div class="col-sm-12 col-md-3">
                    <div class="dashboard-card card-shadow to_invoice">
                        <div class="dashboard-card__icon-container bg-mauve-light d-flex justify-content-center align-items-center">
                            <img t-attf-src="./all_in_one_sales_kit/static/src/img/to-invoice.png"
                                 style=" height: 70px;"/>
                        </div>
                        <div class="dashboard-card__details">
                            <h3>
                                <span>
                                    <div id="to_invoice"/>
                                </span>
                            </h3>
                            <h4>To Invoice</h4>
                        </div>
                </div>
            </div>
                <div>
                    <form class="lead_customer">
                        <center>
                        <h3>Top Customers</h3>
                            <div style="height:400px; width:400px">
                            <canvas id="lead_customer"/>
                        </div>
                        </center>
                    </form>
                    <form class="lead_product">
                        <center>
                        <h3>Top Products</h3>
                            <div style="height:400px; width:400px">
                            <canvas id="lead_product"/>
                        </div>
                        </center>
                    </form>
                </div>
                <div class="bar">
                    <form class="lead_order">
                        <center>
                        <h3>Top Sale Orders</h3>
                            <div style="height:100%; width:100%;margin-top:100px;">
                            <canvas id="lead_order"/>
                        </div>
                        </center>
                    </form>
                    <form class="team">
                        <center>
                        <h3>Sales Team Revenue</h3>
                            <div style="height:50%; width:50%;margin-top:100px;">
                            <canvas id="team"/>
                        </div>
                        </center>
                    </form>
                </div>
                <div class="graph">
                    <form class="least_sold">
                        <center>
                        <h3>Least Sold Products</h3>
                            <div style="height:100%; width:100%;margin-top:100px;">
                            <canvas id="least_sold"/>
                        </div>
                        </center>
                    </form>
                    <form class="my_monthly_comparison">
                        <center>
                        <h3>My Monthly Quotation Count</h3>
                            <div style="height:100%; width:100%;margin-top:100px;">
                            <canvas id="my_monthly_comparison"/>
                        </div>
                        </center>
                    </form>
                </div>
            </div>
        </section>
    </t>
</templates>
