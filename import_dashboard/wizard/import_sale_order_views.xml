<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--  Record for import sale orders form view.  -->
    <record id="import_sale_order_view_form" model="ir.ui.view">
        <field name="name">import.sale.order.view.form</field>
        <field name="model">import.sale.order</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="file_type" widget="radio"/>
                        <field name="file_upload"/>
                    </group>
                    <group>
                        <field name="import_product_by"/>
                        <field name="order_number" widget="radio"/>
                        <field name="auto_confirm_quot"
                               widget="boolean_toggle"/>
                    </group>
                </group>
                <footer>
                    <button string="Import" class="oe_highlight" type="object"
                            name="action_import_sale_order" data-hotkey="i"/>
                    <button string="Cancel" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
