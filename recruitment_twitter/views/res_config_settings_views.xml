<?xml version="1.0" encoding="utf-8"?>
<!-- This XML code is to add twitter authentication fields.-->
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.recruitment.twitter
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="0"/>
        <field name="inherit_id"
               ref="hr_recruitment.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='recruitment_process_div']"
                   position="after">
                <h2>Twitter Authentication</h2>
                <div class="row mt16 o_settings_container"
                     name="twitter_integration_setting_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="recruitment_twitter_consumer_key">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane"
                             id="recruitment_twitter_consumer_key_setting">
                            <label for="consumer_key"/>
                            <div class="text-muted" name="consumer_key">
                                Add consumer key.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="consumer_key"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="recruitment_twitter_consumer_secret">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane"
                             id="recruitment_twitter_consumer_secret_setting">
                            <label for="consumer_secret"/>
                            <div class="text-muted" name="consumer_secret">
                                Add consumer secret key.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="consumer_secret"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="recruitment_twitter_access_token">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane"
                             id="recruitment_twitter_access_token_setting">
                            <label for="access_token"/>
                            <div class="text-muted" name="access_token">
                                Add access token.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="access_token"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="recruitment_twitter_access_token_secret">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane"
                             id="recruitment_twitter_access_token_secret_setting">
                            <label for="access_token_secret"/>
                            <div class="text-muted" name="access_token_secret">
                                Add access token secret.
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <field name="access_token_secret"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
