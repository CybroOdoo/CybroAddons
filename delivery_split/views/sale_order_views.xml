<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Added new fields to Sale Order form view -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.delivery.split</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="delivery_split"
                       readonly="state == 'sale'"/>
                <field name="is_consolidate"
                       readonly="state == 'sale'" invisible="not delivery_split"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']"
                   position="after">
                <field name="recipient_id"
                       column_invisible="parent.delivery_split == False"
                       readonly="state == 'sale'"/>
            </xpath>
        </field>
    </record>
</odoo>
