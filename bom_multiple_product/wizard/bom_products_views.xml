<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Wizard for selecting components for BOM -->
    <record id="bom_products_view_form" model="ir.ui.view">
        <field name="name">bom.products.view.form</field>
        <field name="model">bom.products</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="bom_id" invisible="1"/>
                    </group>
                    <notebook>
                        <page string="Products">
                            <tree>
                                <field name="product_ids"/>
                            </tree>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_add_components"
                            string="Select"
                            type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="product_bom_bom_view_form" model="ir.ui.view">
        <field name="name">product.bom.view.form</field>
        <field name="model">product.bom</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="product_id"/>
                        <field name="quantity"/>
                        <field name="uom_id"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_bom"
                            string="Create Bom"
                            type="object" class="btn-primary"
                            data-hotkey="q"/>
                    <button string="Cancel"
                            class="btn-secondary"
                            special="cancel"
                            data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
