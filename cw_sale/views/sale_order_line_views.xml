<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--        sale order line-->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.view.inherit.cw.sale</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/list/field[@name='price_unit']"
                   position="before">
                <field name="is_cw_product" column_invisible="True"/>
                <field name="cw_qty"/>
                <field name="category_id" column_invisible="1"/>
                <field name="cw_uom_id"
                       invisible="is_cw_product ==False" readonly="False"/>
                <field name="cw_delivered"
                       column_invisible="parent.state not in ['sale', 'done']"
                       class="text-info"/>
                <field name="cw_invoiced"
                       column_invisible="parent.state not in ['sale', 'done']"
                       class="text-info"/>
            </xpath>
        </field>
    </record>
</odoo>
