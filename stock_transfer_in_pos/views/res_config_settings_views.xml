<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Record for creating new fields in res configuration settings-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.stock.transfer.in.pos
        </field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id"
               ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="after">
                <block title="Stock Transfer">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="is_stock_transfer"
                                       readonly="False"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="is_stock_transfer"/>
                                <div class="text-muted">
                                    POS user can easily transfer stock from
                                    point of
                                    sale.
                                </div>
                            </div>
                        </div>
                </block>
            </xpath>
        </field>
    </record>
</odoo>