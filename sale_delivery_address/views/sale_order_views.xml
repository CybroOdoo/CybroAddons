<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Inheriting sale order form to add multiple address -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.sale.delivery.address</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='name']"
                   position="after">
                <field name="delivery_addr_id"
                       options="{'no_open': True, 'no_create': True}"
                       attrs="{'readonly': [('is_address_readonly', '=', True)]}"/>
                <field name="order_partner_id" invisible="1"/>
                <field name="is_address_readonly" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>