<odoo>
    <template id="index_service_tab_snippet" inherit_id="website.snippets"
              name="index_tab">
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]"
               position="inside">
            <t t-snippet="theme_splash.index_service_tab"
               t-thumbnail="/theme_splash/static/src/images/snippets/services-block.png"
            />
        </xpath>
    </template>
    <template id="index_service_tab" name="Index Service Tab snippet">
        <section class="tab   ">

            <div class="container">

                <div class="tabs py-5">
                    <!-- Classic tabs -->
                    <div class="classic-tabs">

                        <ul class="nav tabs-cyan" id="myClassicTab"
                            role="tablist">
                            <li class="nav-item">
                                <a class="nav-link  active show"
                                   id="profile-tab-classic" data-toggle="tab"
                                   href="#profile-classic"
                                   role="tab" aria-controls="profile-classic"
                                   aria-selected="true">Residential
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id="follow-tab-classic"
                                   data-toggle="tab" href="#follow-classic"
                                   role="tab"
                                   aria-controls="follow-classic"
                                   aria-selected="false">Commercial
                                </a>
                            </li>
                        </ul>
                        <div class="tab-content " id="myClassicTabContent">
                            <div class="tab-pane fade active show"
                                 id="profile-classic" role="tabpanel"
                                 aria-labelledby="profile-tab-classic">
                                <div class="wrapper">
                                    <div class="row">

                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                            <div class="tab_left">
                                                <h4>
                                                    Residential sanitizing
                                                </h4>
                                                <p class="para">
                                                    Imagine your home so clean,
                                                    it’s clinically clean.
                                                    Lorem ipsum dolor sit, elit
                                                    dolores nulla quisdam.
                                                    minus aliquam corrupti, modi
                                                    ipsum natus sit pariatur.
                                                    Curabitur orci sed leo
                                                    mattis, nec maximus nibh
                                                    faucibus lorem dolor sit.
                                                </p>
                                            </div>
                                            <div class="tab_icons">
                                                <div class="icon">
                                                    <span class="fas fa-bed"></span>
                                                    <p class="icon-bottom">
                                                        MATTRES
                                                    </p>
                                                </div>
                                                <div class="icon">
                                                    <span class="fas fa-glass-martini"></span>
                                                    <p class="icon-bottom">
                                                        FURNITURE
                                                    </p>
                                                </div>
                                                <div class="icon">
                                                    <span class=" 	fas fa-futbol"></span>
                                                    <p class="icon-bottom">
                                                        CARPET
                                                    </p>
                                                </div>
                                            </div>

                                            <a href="#" class="btn btn-service">
                                                Get Service Now >
                                            </a>

                                        </div>
                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                            <div class="tab_right">
                                                <img src="/theme_splash/static/src/images/tab/residentsan.jpg"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="tab-pane fade" id="follow-classic"
                                 role="tabpanel"
                                 aria-labelledby="follow-tab-classic">

                                <div class="wrapper">
                                    <div class="row">

                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                            <div class="tab_left">
                                                <h4>
                                                    Commercial sanitizing
                                                </h4>
                                                <p class="para">
                                                    Imagine your home so clean,
                                                    it’s clinically clean.
                                                    Lorem ipsum dolor sit, elit
                                                    dolores nulla quisdam.
                                                    minus aliquam corrupti, modi
                                                    ipsum natus sit pariatur.
                                                    Curabitur orci sed leo
                                                    mattis, nec maximus nibh
                                                    faucibus lorem dolor sit.
                                                </p>
                                            </div>
                                            <div class="tab_icons">
                                                <div class="icon">
                                                    <span class="fas fa-bed"></span>
                                                    <p class="icon-bottom">
                                                        FACTORY
                                                    </p>
                                                </div>
                                                <div class="icon">
                                                    <span class="fas fa-glass-martini"></span>
                                                    <p class="icon-bottom">
                                                        BUILDING
                                                    </p>
                                                </div>
                                                <div class="icon">
                                                    <span class=" 	fas fa-futbol"></span>
                                                    <p class="icon-bottom">
                                                        EDUCATION
                                                    </p>
                                                </div>
                                            </div>

                                            <a href="#" class="btn btn-service">
                                                Get Service Now >
                                            </a>

                                        </div>
                                        <div class="col-lg-6 col-md-12 col-sm-12">
                                            <div class="tab_right">
                                                <img src="/theme_splash/static/src/images/tab/commercialsan.jpg"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- Classic tabs -->
                </div>

            </div>

        </section>

    </template>
</odoo>