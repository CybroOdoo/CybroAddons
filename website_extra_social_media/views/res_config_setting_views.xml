<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Inherited res_config_settings to add fields for social medias-->
    <record id="res_config_settings_view_form2" model="ir.ui.view">
        <field name="name">
            res.config.settings.view.form.inherit.website.extra.social.media
        </field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='social_media_settings']//div[hasclass('content-group')]"
                   position="inside">
                <div class="row">
                    <label for="social_whatsapp" string="Whatsapp Number"
                           class="col-md-3 o_light_label"/>
                    <field name="social_whatsapp"/>
                    <label for="social_google_plus" string="Google+"
                           class="col-md-3 o_light_label"/>
                    <field name="social_google_plus"/>
                    <label for="social_snapchat" string="SnapChat"
                           class="col-md-3 o_light_label"/>
                    <field name="social_snapchat"/>
                    <label for="social_flickr" string="Flickr"
                           class="col-md-3 o_light_label"/>
                    <field name="social_flickr"/>
                    <label for="social_quora" string="Quora"
                           class="col-md-3 o_light_label"/>
                    <field name="social_quora"/>
                    <label for="social_pinterest" string="Pinterest"
                           class="col-md-3 o_light_label"/>
                    <field name="social_pinterest"/>
                    <label for="social_dribble" string="Dribble"
                           class="col-md-3 o_light_label"/>
                    <field name="social_dribble"/>
                    <label for="social_tumblr" string="Tumblr"
                           class="col-md-3 o_light_label"/>
                    <field name="social_tumblr"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
