<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_website_extra_social_media"
            model="ir.ui.view">
        <field name="name">res.company.form.inherit.social.media</field>
        <field name="model">res.company</field>
        <field name="inherit_id"
               ref="social_media.view_company_form_inherit_social_media"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="replace">
                <group string="Social Media" name="social_media"
                       groups="base.group_no_one">
                    <field name="social_twitter"/>
                    <field name="social_facebook"/>
                    <field name="social_github"/>
                    <field name="social_linkedin"/>
                    <field name="social_youtube"/>
                    <field name="social_instagram"/>
                    <field name="social_whatsapp"/>
                    <field name="social_google_plus"/>
                    <field name="social_snapchat"/>
                    <field name="social_flickr"/>
                    <field name="social_quora"/>
                    <field name="social_pinterest"/>
                    <field name="social_dribble"/>
                    <field name="social_tumblr"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
