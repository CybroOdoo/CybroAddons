                <field name="date"/>
                <field name="project_id" filters="1"/>
                <field name="task_id" filters="1"/>
                <field name="amount" string="Timesheet Costs"/>
                <field name="unit_amount" type="measure"
                       widget="timesheet_uom"/>
                <field name="department_id"/>
            </calendar>
        </field>
    </record>
