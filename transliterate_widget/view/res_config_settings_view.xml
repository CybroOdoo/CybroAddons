<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_transliterate" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.transliterate</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="languages" position="inside">
                <h2>Transliterate</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <div class="text-muted">
                                Transliterate using Google API
                            </div>
                            <div class="content-group">
                                <group>
                                    <field name="destination_language" class="o_light_label" required="True"/>
                                </group>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>