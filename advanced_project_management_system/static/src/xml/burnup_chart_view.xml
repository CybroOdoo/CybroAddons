<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="project.BurnupChartView.Buttons"
       t-inherit="web.GraphView.Buttons" t-inherit-mode="primary" owl="1">
        <!-- Replace the relevant buttons or elements for the Burnup chart -->
        <!-- For example, if you want to remove a button, use position="replace" -->
        <!-- You can customize this based on your Burnup chart requirements -->
        <xpath expr="//button[@data-mode='pie']" position="replace">
        </xpath>
        <xpath expr="//div[@role='toolbar'][@name='toggleOrderToolbar']"
               position="replace">
        </xpath>
    </t>
</templates>
