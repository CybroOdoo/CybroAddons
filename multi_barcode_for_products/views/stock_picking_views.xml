<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Define new view for stock.picking model to add a field for scanning barcodes -->
    <record id="stock_picking_multi_barcode_view" model="ir.ui.view">
        <field name="name">stock.picking.view.form.inherit.multi.barcode</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                   position="before">
                <field name="scan_barcode"/>
            </xpath>
        </field>
    </record>
</odoo>