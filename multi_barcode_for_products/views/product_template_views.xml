<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Define new view for product.template model to display multiple barcodes -->
    <record id="product_template_multi_barcode_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.multi.barcode</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']//field[@name='barcode']"
                   position="replace">
            </xpath>
            <xpath expr="//page[@name='general_information']" position="after">
                <page string="Barcodes"
                      attrs="{'invisible':[('product_variant_count', '>', 1),]}">
                    <field name="template_multi_barcodes_ids">
                        <tree editable="bottom">
                            <field name="product_multi_barcode"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>