<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit sale order and add cancellation reason field -->
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.website.cancel.sale.order</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="is_cancel" invisible="True"/>
                <field name="cancellation_reason"
                       sequence="9"
                       attrs="{'invisible': [('is_cancel', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
