<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<!--    template for eco food client snippet-->
    <template id="eco_food_client" name="EcoFood Client">
        <section class="clients">
            <div id="recipeCarousel" class="carousel slide client-carousel" data-bs-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-bs-target="#recipeCarousel"
                        data-bs-slide-to="0" class="active"/>
                    <li data-bs-target="#recipeCarousel"
                        data-bs-slide-to="1"/>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="card-group col-lg-12">
                            <div class="card col-lg-4 col-12">
                                <div class="card-img c_img">
                                    <img src="/theme_eco_food/static/src/images/client/c1.jpg" alt=""/>
                                </div>
                            </div>
                            <div class="card col-lg-4 col-12">
                                <div class="card-img c_img">
                                    <img src="/theme_eco_food/static/src/images/client/c2.png" alt=""/>
                                </div>
                            </div>
                            <div class="card col-lg-4 col-12">
                                <div class="card-img c_img">
                                    <img src="/theme_eco_food/static/src/images/client/c3.png" alt=""/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="card-group col-lg-12">
                            <div class="card col-lg-4 col-12">
                                <div class="card-img c_img">
                                    <img src="/theme_eco_food/static/src/images/client/c4.png" alt=""/>
                                </div>
                            </div>
                            <div class="card col-lg-4 col-12">
                                <div class="card-img c_img">
                                    <img src="/theme_eco_food/static/src/images/client/c5.png" alt=""/>
                                </div>
                            </div>
                            <div class="card col-lg-4 col-12">
                                <div class="card-img c_img">
                                    <img src="/theme_eco_food/static/src/images/client/c6.png" alt=""/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#recipeCarousel" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"/>
                </a>
                <a class="carousel-control-next" href="#recipeCarousel" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"/>
                </a>
            </div>
        </section>
    </template>
</odoo>