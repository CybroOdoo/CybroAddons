<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Adding field in res.config.settings-->
    <record id="res_config_settings_view_form_purchase" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.form.all.in.one.purchase.kit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='purchase']/div" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_product_image_in_report_purchase"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_product_image_in_report_purchase"
                               string="Show Product Image In Report"/>
                        <div class="text-muted">
                           Show Product Image In Report
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
