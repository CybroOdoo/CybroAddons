<?xml version="1.0" encoding="UTF-8" ?>
<!--Template for Systray-->
<templates>
    <t t-name="SystrayShortcut">
        <div class="new_icon">
            <div class="button_element"/>
            <a class="systray_favourites" id="add_fav" title="Favourites" href="#" role="button">
                <i class="fa fa-star" role="img"/>
            </a>
            <div class="icon_div" id="popup" style="display: none;">
                <div class="search_pack">
                    <input type="search" placeholder="Search views" class="input" id="search" name="search_value" autocomplete="off"/>
                    <button class="search_view" type="button" id="dropdownMenuButton">
                        <i class="fa fa-search"/>
                    </button>
                </div>
                <div class="display_list" role="menu" style="display: none;" id="drop_list">
                    <div class="dropdown_view"/>
                </div>
            </div>
        </div>
    </t>
</templates>
