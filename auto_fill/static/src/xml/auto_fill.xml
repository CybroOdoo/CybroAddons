<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="FieldAutoFill" owl="1">
        <!-- Template for the FieldAutoFill widget for adding input field -->
        <input type="text" id="input_field_auto_fill"
               t-ref="input_data"
               class="o_input input_field_auto_fill"
               t-att-value="props.value"
               t-on-keyup="_onKeyup"/>
        <table id="list_matches" class="list_matches"
               t-on-click="_onTableRowClicked" style="max-height: 200px;"/>
    </t>
</templates>
