<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherits the form view res.partner to add new field gender -->
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.gender.contact</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="after">
                <field name="gender" string="Gender" widget="radio"
                       attrs="{'invisible':  [('company_type', '=', 'company')]}"/>
            </xpath>
        </field>
    </record>
    <!-- Inherits the search view of res.partner to add new filters and group by the Gender -->
    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.view.search.inherit.gender.contact</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter string="Male" name="gender" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="gender" domain="[('gender', '=', 'female')]"/>
                <filter string="Others" name="gender" domain="[('gender', '=', 'other')]"/>
            </xpath>
            <xpath expr="//group" position="inside">
                <filter string="Gender" name="gender" context="{'group_by': 'gender'}"/>
            </xpath>
        </field>
    </record>
</odoo>