                                                <li>
                                                    <a href="tel:+4733378901">
                                                        <t t-esc="res_company.phone"/>
                                                    </a>
                                                </li>
                                            </ul>
                                            <ul class="ft">
                                                <li>
                                                    <i class="icon">
                                                        <img src="/theme_zen_dark/static/src/img/icons/footer/pin.svg"
                                                             alt=""/>
                                                    </i>
                                                </li>
                                                <li>
                                                    <a href="#">
                                                        <t t-esc="res_company.street"/>
